
body
    background-color #C0D0F1
    font-family sans-serif

.form
    padding 10px
    &__input
        background-color #fff
        border-radius 5px
        padding 10px
        font-size 16px
        color #505050
        border 1px solid #ccc
        margin-bottom 10px
        &::placeholder
            color #505050
        &:focus,&:hover
            background-color #fff
            border 1px solid #3E50B4
        &--error
            border 1px solid #8B0801
        
    &__btn
        padding 15px
        text-transform uppercase
        font-size 16px
        border-radius 5px
        color #fff
        background-color #3E50B4
        &:hover
            cursor pointer
.items
    display flex
    justify-content center
    flex-wrap wrap
.item
    max-width 300px
    padding 15px 15px 15px 30px
    background-color #fff
    margin 10px
    &__content
        position relative
        &:after
            position absolute
            content ""
            top 50%
            left -10px
            width 3px
            height 100%
            background-color #3E50B4
            transform translateY(-50%)
    &__title
        font-size 20px
        margin-bottom 10px
    &__desc
        font-size 15px
        margin-bottom 10px
    &__link
        color #3E50B4
        display block
        font-size 14px
        margin-bottom 15px
    &__wrap-img
        width 100%
    &__img
        width 100%
